<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" client="site" method="upgrade">
    <name>EasyCompare</name>
    <creationDate>April 2013</creationDate>
    <author>EasyJoomla.org</author>
    <authorEmail>support@easyjoomla.org</authorEmail>
    <authorUrl>http://www.easyjoomla.org</authorUrl>
    <license>GNU/GPL</license>
    <version>1.0.5</version>
    <description>
	  <![CDATA[
		<h3>
			<a class="easylogo" href="http://www.easyjoomla.org" target="_blank">
			  	EasyJoomla.org
			</a>
		</h3>
		<p>Modul displays VirtueMart products which are currently to compare in EasyCompare component.</p>
		<p>More info about extension at <a href="http://www.easyjoomla.org/virtuemart-extensions/easycompare-aio-package" target="_blank" >EasyJoomla.org</a>.</p>
	  ]]>
	</description>
    
    <files>
        <filename module="mod_easycompare">mod_easycompare.php</filename>
        <folder>tmpl</folder>
        <filename>index.html</filename>
        <filename>mod_easycompare.xml</filename>
    </files>
    
    <languages folder="languages">
        <language tag="cs-CZ">cs-CZ/cs-CZ.mod_easycompare.ini</language>
        <language tag="cs-CZ">cs-CZ/cs-CZ.mod_easycompare.sys.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_easycompare.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_easycompare.sys.ini</language>
        <language tag="it-IT">it-IT/it-IT.mod_easycompare.ini</language>
        <language tag="it-IT">it-IT/it-IT.mod_easycompare.sys.ini</language>
    </languages>
    
    <config>                  
        <fields name="params">
              
            <fieldset name="basic">            
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
            </fieldset>
            
            <fieldset name="advanced">
                <field name="use_css" type="radio" default="1" label="MOD_EASYCOMPARE_PARAM_USE_CSS">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            
        </fields>
    </config>
    
</extension>